<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_name_text"
        android:textSize="@dimen/person_name_text_size"
        android:paddingTop="@dimen/person_list_view_item_padding_top"
        android:paddingBottom="@dimen/person_list_view_item_padding_bottom"
        android:layout_centerHorizontal="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@+id/person_name_text"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>
